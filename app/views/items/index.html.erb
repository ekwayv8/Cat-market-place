<!DOCTYPE html>
<html>
<head>
	<title>Cat MP</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
	                    

	                    <section class="slice border-top">
	                        <div class="container">
	                            <div class="section-title section-title--style-1 text-center">
	                                <h3 class="section-title-inner heading-6 strong-600 text-uppercase ls-2">
	                                    <span>List of Cat Pictures</span>
	                                </h3>
	                                <div class="fluid-paragraph fluid-paragraph-sm c-gray-light strong-300 font-custom-4 text-center">
	                                Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt labore et dolore isque ut nulla.
	                            </div>
	                                <span class="section-title-delimiter clearfix d-none"></span>
	                            </div>

	                            <div class="row-wrapper">
	                                <div class="row cols-xs-space cols-sm-space cols-md-space">
	                                	<% @items.each.with_index(1) do |item| %>
	                                    <div class="col-lg-3 col-md-6">
	                                        <div class="block product bg-transparent no-radius">
	                                            <div class="product-image">
	                                                <div class="view view-first">

	                                                		<%if item.image_upload.attached?%>
                                                        <%= link_to image_tag(item.image_upload), item_path(item.id), alt: 'image_upload' %>
                                                      <%else%>
                                                        <%= link_to image_tag(item.image_url), item_path(item.id) %>
                                                      <%end%>

	                                              
	                                                </div>

	                                                <div class="product-actions--a product-actions--2" data-animation-in="slideInRight"  data-animation-out="slideOutRight">
	                                                    <button type="button" class="btn-product-action">
	                                                        <i class="ion-bag"></i>
	                                                    </button>

	                                                    <button type="button" class="btn-product-action">
	                                                        <i class="ion-ios-heart-outline"></i>
	                                                    </button>
	                                                </div>
	                                            </div>

	                                            <div class="block-body px-0 text-center">
	                                                <h3 class="heading heading-6 strong-500 text-capitalize mb-0">"<%= item.title %>"</h3>
	                                             
	                                                <div class="price-wrapper">
	                                                    <span class="price-value"><%= item.price %><span class="price heading-6 c-gray-light strong-400"> â‚¬</span></span>
	                                                </div>
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <br/>
																			<% end %>
	                                </div>
	                            </div>
	                        </div>
	                    </section>

	                    <section class="slice-sm sct-color-1 border-top border-bottom">
	                        <div class="container">
	                            <div class="row cols-xs-space cols-sm-space cols-md-space">
	                                <div class="col-lg-4 b-lg-right">
	                                    <div class="px-3 py-3 text-lg-center">
	                                        <h3 class="heading heading-6 strong-500">Free shipping in 48/72H</h3>
	                                        <p class="c-gray-light line-height-1_6">
	                                            Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod
	                                        </p>
	                                    </div>
	                                </div>

	                                <div class="col-lg-4 b-lg-right">
	                                    <div class="px-3 py-3 text-lg-center">
	                                        <h3 class="heading heading-6 strong-500">Free returns</h3>
	                                        <p class="c-gray-light line-height-1_6">
	                                            Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod
	                                        </p>
	                                    </div>
	                                </div>

	                                <div class="col-lg-4">
	                                    <div class="px-3 py-3 text-lg-center">
	                                        <h3 class="heading heading-6 strong-500">Secure payment</h3>
	                                        <ul class="inline-links">                         
	                                            <li>
	                                                <%= image_tag 'icons/cards/stripe.png', width: 180, class: "img-grayscale" %>
	                                            </li>
	                                        </ul>
	                                    </div>
	                                </div>
	                            </div>
	                        </div>
	                    </section>

	                </div>
	            </div><!-- END: st-content-inner -->
	        </div><!-- END: st-pusher -->
	    </div><!-- END: st-container -->
	</div><!-- END: body-wrap -->
	
	<!-- SCRIPTS -->
	<a href="#" class="back-to-top btn-back-to-top"></a>

</body>
</html>